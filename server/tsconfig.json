{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    // "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@type/*": [
        "./src/@types/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}
